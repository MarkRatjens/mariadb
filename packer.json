{
	"variables": {
		"DEBIAN_FRONTEND": "noninteractive"
	},
	"builders": [
		{
			"type": "lxd",
			"name": "lxd-ubuntu",
			"image": "images/debian/buster/cloud",
			"output_image": "mysqld:test",
			"publish_properties": {
				"description": "Trivial repackage with Packer"
			}
		}
	],
	"persistent": [
		{
			"destination": "/var/lib/mariadb/",
			"source": "/var/lib/containers/mariadb"
		}
	],
	"provisioners": [
		{
			"type": "file",
			"source": "injections/",
			"destination": "/tmp/"
		},
		{
			"type": "shell",
			"inline": [
				"apt-get -y update",
				"apt-get install -y default-mysql-server",
				"cd /tmp/injections ;cp -rp . / ",
				"mysql < /tmp/init.sql; rm /tmp/init.sql",
				"rm tmp/init.sql"
			]
		}
	]
}
