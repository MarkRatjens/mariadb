{
	"title": "Mariadb",
	"description": "Mariadb Server",
	"configuration": {
		"root_password": "^^random(32)^^",
		"max_allowed_packet": "4M",
		"event_scheduler": 1,
		"sql_mode": 1,
		"local_infile": 1,
		"innodb_buffer_pool_size": 134217728
	},
	"volumes": [
		{
			"destination": "/var/lib/mariadb/",
			"source": "data"
		}
	],
	"bindings": [
		{
			"type": "embed",
			"descriptor": {
				"repository": "https://github.com/v2Blueprints/enginesd_debian_base"
			}
		}
	],
	"os_packages": {
		"adds": [
			"default-mysql-server"
		]
	},
	"containers": [
		{
			"type": "lxd"
		}
	],
	"binding_anchor": {
	  "hostname": "^^identifier^^",
		"databasename": "^^identifier^^",
		"username": "^^identifier^^_user",
		"password": "^^random(16)^^",
		"collation": "utf8_general_ci",
		"charset": "utf8",
		"super_user": false,
		"grant:": false
	}
}
